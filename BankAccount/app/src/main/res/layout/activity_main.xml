<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="islandhop.me.bankaccount.MainActivity">

    <TextView
        android:layout_width="352dp"
        android:layout_height="45dp"
        android:text="Account1 balance: $50.00"
        android:id="@+id/account1BalId"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"/>

    <TextView
        android:text="Account2 balance: $0.00"
        android:layout_width="349dp"
        android:id="@+id/account2BalId"
        android:layout_height="45dp"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/account1BalId"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"/>

    <Button
        android:text="Add Deposit to account1"
        android:layout_width="351dp"
        android:layout_height="49dp"
        android:id="@+id/button"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/account2BalId"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:onClick="account1DepositBtn"/>

    <Button
        android:text="Add Deposit to account2"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/button"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:onClick="account2DepositBtn"/>
</android.support.constraint.ConstraintLayout>
