<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/accountDialogId">

    <TextView
        android:text="Enter deposit amount for account1"
        android:layout_width="353dp"
        android:layout_height="32dp"
        android:id="@+id/textView"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="@+id/accountDialogId"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/accountDialogId"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/accountDialogId"/>

    <EditText
        android:layout_width="352dp"
        android:layout_height="44dp"
        android:ems="10"
        android:id="@+id/account1ValueId"
        app:layout_constraintHorizontal_bias="0.62"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:hint="eg: $25.00"
        android:inputType="numberDecimal"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/accountDialogId"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/accountDialogId"/>
</android.support.constraint.ConstraintLayout>